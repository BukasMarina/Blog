
@{
    ViewBag.Title = "LatestPost";
}
@model IEnumerable<Blog.Models.DataBase.Post>
<div class="wrap-article">
    <h2>Latest Post</h2>
    <br>
    @foreach (var item in Model)
{
    <a style="font-size: 200%" href="@Url.Action("Index", "Home", new { title = item.Title})">@item.Title</a>
        <p class="date"><span>@item.DateCreated.Date.ToString("D")</span><span>@item.DateCreated.ToString("HH:mm")</span></p>
        <div class="text-block">
            <p>@item.Body</p>
        </div> 
        <br>
    }
</div>
