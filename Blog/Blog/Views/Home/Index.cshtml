@using Blog.Models
@model ArticleModel
<div class="wrap-article">
    @if (Model.Post != null)
{
    <h2>@Model.Post.Title</h2>
    <p class="date"><span>@Model.Post.DateCreated.Date.ToString("D")</span><span>@Model.Post.DateCreated.ToString("HH:mm")</span></p>
    <div class="text-block">
        <p>@Model.Post.Body</p>
    </div>
}
</div>
<div class="wrap-comments">
    <h2>Comments</h2>
    <ul class="list-comment">
        @foreach (var item in Model.Comments)
{
    <li>
        <div class="avatar"><img src="~/Content/images/avatar-comment.png" alt="" /></div>
        <div class="comment-text">
            <a href="#">@item.Name</a>
            <p class="date"><span>@Model.Post.DateCreated.Date.ToString("D")</span><span>@Model.Post.DateCreated.ToString("HH:mm")</span></p>
            <p>@item.Body</p>
        </div>
    </li>
}
    </ul>
    <div class="add-comment">
        <form action="@Url.Action("Index", "Home", new { title = Model.Post.Title})" method="post">
            @Html.TextAreaFor(m => m.NewComment.Comment, new { placeholder = "Your comment", @class = "txt-area" })
            @Html.Label("Enter the name")
            @Html.TextAreaFor(m => m.NewComment.Name)
            <div class="wrap-btn">
                <button class="btn-save">Save changes</button>
            </div>
        </form>
    </div>
</div>